<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="@dimen/constraint_food_item_width"
    android:layout_height="@dimen/constraint_food_item_height"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_view_food_width"
        android:layout_height="@dimen/card_view_food_height"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/card_view_food_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_food_home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/food_item_name_margin_start"
            android:layout_marginTop="@dimen/food_item_name_margin_top"
            android:layout_marginEnd="@dimen/food_item_name_margin_end"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/food_item_name_text_size"
            tools:text="Food title\n second row \n new row \n another row" />

    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_food_home_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/circle_image_food_margin_start"
        android:layout_marginEnd="@dimen/circle_image_food_margin_end"
        android:layout_marginBottom="@dimen/circle_image_food_margin_bottom"
        android:elevation="@dimen/circle_image_food_elevation"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>